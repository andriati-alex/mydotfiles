backend = "glx";
# glx-no-stencil = true; # may have problem with blur and opacity
# glx-copy-from-front = true;
glx-no-rebind-pixmap = true; # Recommended if it works.
no-use-damage = true;

#################################
#
# Shadows
#
#################################

shadow = true;
shadow-radius = 20;
shadow-offset-x = -5;
shadow-offset-y = -5;
shadow-opacity = 0.75;

log-level = "warn";
log-file = "/home/andriati/.config/picom/picom.log";

shadow-exclude = [
    "name *= 'Notification'",
    "name *= 'VLC'",
    "name *= 'compton'",
    "name *= 'picom'",
    "name *= 'vim'",
    "class_g = 'Chrome' && argb",
    "class_g = 'Brave' && argb",
    "class_g = 'Firefox' && argb",
    "class_g = 'Steam' && argb",
    "class_g = 'Conky'",
    "class_g = 'xmobar'",
    "_GTK_FRAME_EXTENTS@:c",
    "_NET_WM_STATE@:32a *= '_NET_WM_STATE_HIDDEN'"
];
shadow-ignore-shaped = true;

#################################
#
# Opacity
#
#################################

inactive-opacity = 1;
active-opacity = 1;
frame-opacity = 1;
inactive-opacity-override = false;

#################################
#           Corners             #
#################################

# Sets the radius of rounded window corners. When > 0, the compositor will
# round the corners of windows. Does not interact well with
# `transparent-clipping`. Will not work with --experimental_backends
# corner-radius = 12

# Exclude conditions for rounded corners.
#rounded-corners-exclude = [
#  "window_type = 'dock'",
#  "window_type = 'desktop'"
#];
detect-rounded-corners = true;

#################################
#
# Blur
#
#################################

#blur-background = true;
#blur-background-frame = true;
#blur-background-fixed = false;
blur-background-exclude = [
    "window_type = 'dock'",
    "window_type = 'desktop'",
    "name *= 'vim'",
    "class_g = 'discord' && argb",
    "class_g = 'Firefox' && argb",
    "class_g = 'zoom' && argb",
    "class_g = 'Steam' && argb",
    "class_g = 'Gnome-screenshot' && argb",
    "name *= 'Screenshot'",
    "_GTK_FRAME_EXTENTS@:c"
];
# Some methods like dual_kawase requires --experimental_backends option
blur-method="kernel";
